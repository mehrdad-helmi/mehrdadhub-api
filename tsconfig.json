{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@mehrdadhub/locales/*": [
        "./src/locales/*"
      ],
      "@mehrdadhub/auth": [
        "./src/auth/decorators"
      ],
      "@mehrdadhub/providers": [
        "./src/providers"
      ],
      "@mehrdadhub/types": [
        "./src/common/types"
      ],
      "@mehrdadhub/common": [
        "./src/common"
      ]
    }
  }
}
