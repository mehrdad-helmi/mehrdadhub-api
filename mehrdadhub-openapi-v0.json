						"example": "user@example.com"
					},
					"password": {
						"type": "string",
						"description": "The password for the user account",
						"example": "yourStrong(!)Password",
						"minLength": 8
					},
					"displayName": {
						"type": "string",
						"description": "Display name of the user",
						"example": "John Doe"
					}
				},
				"required": [
					"email",
					"password",
					"displayName"
				]
			},
			"CreateTaskDto": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string",
						"example": "My special task",
						"description": "A proper name for the task",
						"default": "New Task"
					},
					"description": {
						"type": "string",
						"example": "This is some description about my task",
						"description": "A proper description for the task"
					},
					"color": {
						"type": "string",
						"example": "blue",
						"description": "Color of the task card in UI (any proper CSS color format)"
					}
				},
				"required": [
					"title"
				]
			},
